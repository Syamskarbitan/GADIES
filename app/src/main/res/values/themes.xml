<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GADIES" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gadies_yellow</item>
        <item name="colorPrimaryVariant">@color/gadies_yellow_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/gadies_green</item>
        <item name="colorSecondaryVariant">@color/gadies_green_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.GADIES.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GADIES.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.GADIES.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

</resources>